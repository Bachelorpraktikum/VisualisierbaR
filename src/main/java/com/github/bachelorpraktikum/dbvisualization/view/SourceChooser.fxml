<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.65"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.bachelorpraktikum.dbvisualization.view.SourceController">
    <center>
        <TabPane fx:id="tabPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                 minWidth="-Infinity" prefHeight="112.0" prefWidth="600.0"
                 tabClosingPolicy="UNAVAILABLE">
            <Tab text="File">
                <fx:include fx:id="fileChooserTab" source="FileChooserTab.fxml"/>
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <center>
                <Button fx:id="openSource" contentDisplay="TEXT_ONLY" disable="true"
                        mnemonicParsing="false" text="Open" textAlignment="CENTER" wrapText="true">
                    <BorderPane.margin>
                        <Insets left="75.0"/>
                    </BorderPane.margin>
                </Button>
            </center>
            <right>
                <Button fx:id="closeWindowButton" contentDisplay="TEXT_ONLY" mnemonicParsing="false"
                        text="Close">
                    <BorderPane.margin>
                        <Insets right="4.0"/>
                    </BorderPane.margin>
                </Button>
            </right>
            <BorderPane.margin>
                <Insets bottom="4.0"/>
            </BorderPane.margin>
        </BorderPane>
    </bottom>
</BorderPane>
