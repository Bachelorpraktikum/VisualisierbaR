<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<BorderPane fx:id="rootPane" prefHeight="600" prefWidth="800"
            xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.bachelorpraktikum.dbvisualization.view.MainController">
    <top>
        <AnchorPane>
            <children>
                <FlowPane alignment="CENTER_LEFT">
                    <ToggleButton fx:id="logToggle" text="Show/Hide log entries"/>
                </FlowPane>
                <FlowPane alignment="CENTER_RIGHT" AnchorPane.rightAnchor="0.0">
                    <children>
                        <Button fx:id="closeButton" text="Close data source"/>
                    </children>
                </FlowPane>
            </children>
        </AnchorPane>
    </top>
    <left>
        <StackPane fx:id="leftPane">
            <ListView fx:id="logList"/>
        </StackPane>
    </left>
    <center>
        <StackPane>

        </StackPane>
    </center>
    <right>
        <StackPane>

        </StackPane>
    </right>
</BorderPane>
